{
  "//1": "describes your app and its dependencies",
  "//2": "https://docs.npmjs.com/files/package.json",
  "//3": "updating this file will download and update your packages",
  "name": "starter-react",
  "version": "0.0.1",
  "description": "A small scaffold to get you started using React with Webpack",
  "main": "server.js",
  "scripts": {
    "build": "webpack --config webpack.config.cjs && cp src/index.html public/index.html",
    "start": "webpack --config webpack.config.cjs && node --experimental-modules server.js",
    "s": "webpack --config webpack.config.cjs && node --experimental-modules server.js",
    "copy-index": "mkdir -p dist/public; cp src/index.html dist/public/",
    "process-client": "npm run copy-index; esbuild ./src/app.js --bundle --outfile=dist/public/bundle.js --minify --loader:.js=jsx '--define:process.env.NODE_ENV=\"production\"'",
    "process-server": "esbuild  --bundle ./src/api/*.js --platform=node --format=cjs --outdir=dist/functions",
    "build-all": "npm run process-client; npm run process-server"
  },
  "dependencies": {
    "babel-loader": "^8.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "got": "^11.3.0",
    "jsx-loader": "^0.13.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "recharts": "^1.8.5",
    "request": "^2.88.2",
    "swr": "^0.2.3"
  },
  "engines": {
    "node": "12.x"
  },
  "repository": {
    "url": "https://glitch.com/edit/#!/starter-react"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "esbuild": "^0.5.12",
    "regenerator-runtime": "^0.13.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
